<div class="game">
  <div id="players-desk-1round">
    <% participations.order(:id).each do |participation| %>
      <div id="player-desk-1round">
        <p id="player-nickname-1round"><%= participation.user.nickname %></p>

        <div id="<%= participation.game.current_attempts.flat_map(&:participation).include?(participation) ? 'card-point-1round-looser' : 'card-point-1round' %>">
          <% (9 - participation.point).times do %>
            <p class="point-1round-gray"></p>
          <% end %>

          <% participation.point.times do %>
            <p class="point-1round-orange"></p>
          <% end %>
        </div>

        <% if participation.game.current_attempts.flat_map(&:participation).include?(participation) %>
          <p id="<%= dom_id(participation.user) %> "><i class="fa-solid fa-poo looser"></i></p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
