<% participations.each do |participation| %>

  <% if participation.point == 9 %>
    <div class="winner">
      <p>The winner is : <%= participation.user.nickname %> | Score : <%= participation.point %></p>
    </div>
  <% else %>
    <span>
      <p>Looser : </p>
      <p>Joueur<%= participation.user.nickname %> | Score : <%= participation.point %></p>
    </span>
  <% end %>
<% end %>

<%= link_to "Play again",root_path, class:"big-yellow-btn" %>
